{
    "name": "nextjs-template",
    "description": "This is a base template setup that I follow in setting up a Next.js & TailwindCSS project",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "configure": "pnpm install && husky",
        "dev": "next dev",
        "lint": "pnpm biome check .",
        "lint:apply": "pnpm biome check --apply .",
        "test": "pnpm jest --passWithNoTests",
        "test:coverage": "pnpm jest --passWithNoTests --coverage",
        "test:watch": "pnpm jest --watch --passWithNoTests",
        "cypress:open": "npx cypress open",
        "build": "next build",
        "start": "next start"
    },
    "dependencies": {
        "class-variance-authority": "^0.7.0",
        "clsx": "^2.0.0",
        "lucide-react": "^0.394.0",
        "next": "^14.2.3",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "tailwind-merge": "^1.14.0",
        "tailwindcss-animate": "^1.0.7"
    },
    "devDependencies": {
        "@biomejs/biome": "1.7.3",
        "@commitlint/cli": "^19.3.0",
        "@commitlint/config-conventional": "^19.2.2",
        "@testing-library/jest-dom": "^6.4.5",
        "@testing-library/react": "^15.0.7",
        "@types/node": "^20.4.5",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@typescript-eslint/eslint-plugin": "^7.12.0",
        "autoprefixer": "^10.4.16",
        "cypress": "^13.11.0",
        "husky": "^9.0.11",
        "jest": "^29.6.2",
        "jest-environment-jsdom": "^29.6.2",
        "lint-staged": "^15.2.7",
        "postcss": "8.4.38",
        "tailwindcss": "^3.4.4",
        "typescript": "^5.1.6"
    }
}
